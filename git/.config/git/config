[user]
	name = Oscar J Soto
	email = oscar.j.soto12@gmail.com
[color]
	ui = auto
[core]
	editor = vim
	autocrlf = input
[init]
	defaultBranch = main
[fetch]
	prune = true
[alias]
    aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
	change-commits = "!f() { VAR=$1; OLD=$2; NEW=$3; shift 3; git filter-branch --env-filter \"if [[ \\\"$`echo $VAR`\\\" = '$OLD' ]]; then export $VAR='$NEW'; fi\" $@; }; f"
